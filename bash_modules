#!/usr/bin/env bash
# SENTINEL 3.0 - Advanced Modular Bash Extension Framework
# Author: John
# Codename: NIGHTHAWK
# Description: Enterprise-grade module management system with dependency resolution, 
#              integrity verification, performance metrics, and advanced diagnostics.

set -Euo pipefail
# Trap errors for better debugging
trap 'echo "Error on line $LINENO: $BASH_COMMAND" >&2' ERR

# === Configuration ===
SENTINEL_VERSION="3.0.0"
SENTINEL_HOME="${SENTINEL_HOME:-$HOME/.sentinel}"
SENTINEL_MODULES_PATH="${U_MODULES_PATH:-$SENTINEL_HOME/modules}"
SENTINEL_ENABLED_FILE="$SENTINEL_HOME/enabled.list"
SENTINEL_BROKEN_FILE="$SENTINEL_HOME/broken.list"
SENTINEL_LOG="$SENTINEL_HOME/sentinel.log"
SENTINEL_STATS="$SENTINEL_HOME/stats.json"
SENTINEL_MAX_LOG_SIZE=$((10*1024*1024)) # 10MB
SENTINEL_DEBUG="${SENTINEL_DEBUG:-0}"

# Initialize directory structure
mkdir -p "$SENTINEL_MODULES_PATH"
touch "$SENTINEL_ENABLED_FILE" "$SENTINEL_BROKEN_FILE" "$SENTINEL_LOG"

# === Registry Setup ===
declare -A SENTINEL_LOADED       # Currently loaded modules
declare -A SENTINEL_LOADING      # Modules in the process of loading (dependency cycle detection)
declare -A SENTINEL_LOAD_TIMES   # Performance metrics for module load times

# === Logging System ===
log() {
    local level="$1"
    local message="$2"
    local timestamp
    timestamp=$(date +"%Y-%m-%d %H:%M:%S")
    
    # Rotate log if needed
    if [[ -f "$SENTINEL_LOG" ]] && [[ $(stat -c%s "$SENTINEL_LOG") -gt $SENTINEL_MAX_LOG_SIZE ]]; then
        mv "$SENTINEL_LOG" "$SENTINEL_LOG.old"
    fi
    
    # Only log debug messages when debug is enabled
    if [[ "$level" != "DEBUG" || "$SENTINEL_DEBUG" == "1" ]]; then
        printf "[%s] [%-7s] %s\n" "$timestamp" "$level" "$message" | tee -a "$SENTINEL_LOG" >&2
    fi
}

debug() { log "DEBUG" "$*"; }
info() { log "INFO" "$*"; }
warn() { log "WARNING" "$*"; }
error() { log "ERROR" "$*"; }
critical() { log "CRITICAL" "$*"; }

# === Hash Verification ===
verify_checksum() {
    local file="$1"
    local expected_hash
    expected_hash=$(grep -m 1 '^# HASH:' "$file" | awk '{print $3}')
    
    # Skip verification if no hash is present
    if [[ -z "$expected_hash" ]]; then
        debug "No hash found for '$file', skipping verification"
        return 0
    fi
    
    # Get file hash excluding the hash line itself
    local actual_hash
    actual_hash=$(sed '/^# HASH:/d' "$file" | sha256sum | awk '{print $1}')
    
    if [[ "$expected_hash" != "$actual_hash" ]]; then
        error "Hash mismatch for module '$file'"
        error "Expected: $expected_hash"
        error "Actual:   $actual_hash"
        return 1
    fi
    
    debug "Hash verified for module '$file'"
    return 0
}

# === Update module hash ===
update_hash() {
    local file="$1"
    local temp_file="$file.tmp"
    
    # Remove existing hash line
    sed '/^# HASH:/d' "$file" > "$temp_file"
    
    # Calculate new hash
    local new_hash
    new_hash=$(sha256sum "$temp_file" | awk '{print $1}')
    
    # Insert new hash at the top of the file, preserving shebang
    if grep -q '^#!/' "$temp_file"; then
        sed -i "1a # HASH: $new_hash" "$temp_file"
    else
        sed -i "1i # HASH: $new_hash" "$temp_file"
    fi
    
    mv "$temp_file" "$file"
    info "Updated hash for module '$file'"
}

# === Module Loading ===
module_enable() {
    local name="$1"
    local force="${2:-0}"
    local caller="${3:-direct}"
    local start_time
    start_time=$(date +%s.%N)
    
    local file="$SENTINEL_MODULES_PATH/$name.module"
    
    # Check if already loaded
    if [[ "${SENTINEL_LOADED[$name]:-}" == "1" ]] && [[ "$force" != "1" ]]; then
        [[ "$caller" == "direct" ]] && info "Module '$name' already loaded"
        return 0
    fi
    
    # Check for circular dependencies
    if [[ "${SENTINEL_LOADING[$name]:-}" == "1" ]]; then
        error "Circular dependency detected involving module '$name'"
        return 1
    fi
    
    # Check if module exists
    if [[ ! -f "$file" ]]; then
        if [[ "$caller" == "direct" ]]; then
            error "Module '$name' not found at $file"
            
            # Suggest similar modules
            local suggestions
            suggestions=$(find "$SENTINEL_MODULES_PATH" -name "*.module" -exec basename {} .module \; | grep -i "$name" || true)
            if [[ -n "$suggestions" ]]; then
                info "Did you mean one of these?"
                while IFS= read -r suggestion; do
                    [[ -n "$suggestion" ]] && echo "  $suggestion"
                done <<< "$suggestions"
            fi
        fi
        return 1
    fi
    
    # Check if module is marked as broken
    if grep -qx "$name" "$SENTINEL_BROKEN_FILE" && [[ "$force" != "1" ]]; then
        warn "Skipping known broken module '$name'. Use force=1 to override."
        return 1
    fi
    
    # Verify integrity if not forced
    if [[ "$force" != "1" ]] && ! verify_checksum "$file"; then
        error "Integrity check failed for module '$name'"
        echo "$name" >> "$SENTINEL_BROKEN_FILE"
        return 1
    fi
    
    # Check if executable
    if [[ ! -x "$file" ]] && [[ "$force" != "1" ]]; then
        error "Module file '$file' is not executable. Run: chmod +x '$file'"
        return 1
    fi
    
    # Mark as loading to detect circular dependencies
    SENTINEL_LOADING["$name"]=1
    
    # Load dependencies first
    local deps
    if grep -q "SENTINEL_MODULE_DEPENDENCIES=" "$file"; then
        deps=$(grep -m 1 "SENTINEL_MODULE_DEPENDENCIES=" "$file" | cut -d'"' -f2)
    else
        deps=$(grep -m 1 '^# DEPENDS:' "$file" | cut -d: -f2- | xargs)
    fi
    
    if [[ -n "$deps" ]]; then
        for dep in $deps; do
            debug "Resolving dependency: $dep for $name"
            if ! module_enable "$dep" "$force" "$name"; then
                error "Failed to load dependency '$dep' required by '$name'"
                unset "SENTINEL_LOADING[$name]"
                echo "$name" >> "$SENTINEL_BROKEN_FILE"
                return 1
            fi
        done
    fi
    
    # Source the module
    if source "$file"; then
        SENTINEL_LOADED["$name"]=1
        unset "SENTINEL_LOADING[$name]"
        
        # Record load time
        local end_time
        end_time=$(date +%s.%N)
        SENTINEL_LOAD_TIMES["$name"]=$(echo "$end_time - $start_time" | bc)
        
        # Add to enabled list if directly called
        if [[ "$caller" == "direct" ]]; then
            if ! grep -qx "$name" "$SENTINEL_ENABLED_FILE"; then
                echo "$name" >> "$SENTINEL_ENABLED_FILE"
                info "Module '$name' added to startup list"
            fi
        fi
        
        info "Module '$name' loaded successfully in ${SENTINEL_LOAD_TIMES[$name]} seconds"
        return 0
    else
        error "Failed to source module '$name' – error in module code"
        unset "SENTINEL_LOADING[$name]"
        echo "$name" >> "$SENTINEL_BROKEN_FILE"
        return 1
    fi
}

# === Disable Module ===
module_disable() {
    local name="$1"
    
    if ! grep -qx "$name" "$SENTINEL_ENABLED_FILE"; then
        warn "Module '$name' is not in the enabled list"
    else
        sed -i "/^$name\$/d" "$SENTINEL_ENABLED_FILE"
        info "Module '$name' removed from startup list"
    fi
    
    if [[ "${SENTINEL_LOADED[$name]:-}" == "1" ]]; then
        info "Note: Module remains active in this session (cannot be unloaded)"
    fi
}

# === Reset Broken Status ===
module_reset() {
    local name="$1"
    if grep -qx "$name" "$SENTINEL_BROKEN_FILE"; then
        sed -i "/^$name\$/d" "$SENTINEL_BROKEN_FILE"
        info "Reset broken status for module '$name'"
    else
        info "Module '$name' was not marked as broken"
    fi
}

# === List Modules ===
module_list() {
    echo -e "\nSENTINEL $SENTINEL_VERSION Module System"
    echo "=================================="
    
    local total=0
    local enabled=0
    local loaded=0
    local broken=0
    
    echo -e "\nAvailable Modules:\n-----------------"
    printf "%-5s %-20s %-10s %s\n" "STATUS" "NAME" "VERSION" "DESCRIPTION"
    printf "%-5s %-20s %-10s %s\n" "------" "----" "-------" "-----------"
    
    for module_file in "$SENTINEL_MODULES_PATH"/*.module; do
        [[ -f "$module_file" ]] || continue
        
        local name
        name=$(basename "$module_file" .module)
        ((total++))
        
        # Get metadata
        local desc version author
        desc=$(grep -m 1 'SENTINEL_MODULE_DESCRIPTION=' "$module_file" | cut -d'"' -f2 2>/dev/null || 
              grep -m 1 '^# DESC:' "$module_file" | cut -d: -f2- | xargs 2>/dev/null || 
              echo "No description")
        
        version=$(grep -m 1 'SENTINEL_MODULE_VERSION=' "$module_file" | cut -d'"' -f2 2>/dev/null ||
                 grep -m 1 '^# VERSION:' "$module_file" | cut -d: -f2- | xargs 2>/dev/null || 
                 echo "")
        
        # Check status
        local status=""
        if grep -qx "$name" "$SENTINEL_ENABLED_FILE"; then
            status+="E"
            ((enabled++))
        fi
        if [[ "${SENTINEL_LOADED[$name]:-}" == "1" ]]; then
            status+="L"
            ((loaded++))
        fi
        if grep -qx "$name" "$SENTINEL_BROKEN_FILE"; then
            status+="B"
            ((broken++))
        fi
        
        [[ -z "$status" ]] && status="---"
        
        # Truncate description if too long
        if [[ ${#desc} -gt 40 ]]; then
            desc="${desc:0:37}..."
        fi
        
        printf "%-5s %-20s %-10s %s\n" "[$status]" "$name" "$version" "$desc"
    done
    
    echo -e "\nStatus: [E]=Enabled at startup, [L]=Loaded, [B]=Marked as broken"
    echo "Summary: $total modules, $enabled enabled, $loaded loaded, $broken broken"
    
    # Show performance stats
    if [[ ${#SENTINEL_LOAD_TIMES[@]} -gt 0 ]]; then
        echo -e "\nPerformance Metrics:"
        echo "------------------"
        printf "%-20s %s\n" "MODULE" "LOAD TIME (sec)"
        for module in "${!SENTINEL_LOAD_TIMES[@]}"; do
            printf "%-20s %s\n" "$module" "${SENTINEL_LOAD_TIMES[$module]}"
        done
    fi
}

# === Module Information ===
module_info() {
    local name="$1"
    local file="$SENTINEL_MODULES_PATH/$name.module"
    
    if [[ ! -f "$file" ]]; then
        error "Module '$name' not found"
        return 1
    fi
    
    echo -e "\nModule Information: $name"
    echo "============================"
    
    # Check hash
    local verified="No"
    if verify_checksum "$file" >/dev/null 2>&1; then
        verified="Yes"
    fi
    
    # Get metadata - try different formats for compatibility
    local version description author dependencies
    version=$(grep -m 1 'SENTINEL_MODULE_VERSION=' "$file" | cut -d'"' -f2 2>/dev/null ||
             grep -m 1 '^# VERSION:' "$file" | cut -d: -f2- | xargs 2>/dev/null || 
             echo "unknown")
             
    description=$(grep -m 1 'SENTINEL_MODULE_DESCRIPTION=' "$file" | cut -d'"' -f2 2>/dev/null || 
                 grep -m 1 '^# DESC:' "$file" | cut -d: -f2- | xargs 2>/dev/null || 
                 echo "No description available")
                 
    author=$(grep -m 1 'SENTINEL_MODULE_AUTHOR=' "$file" | cut -d'"' -f2 2>/dev/null || 
            grep -m 1 '^# AUTHOR:' "$file" | cut -d: -f2- | xargs 2>/dev/null || 
            echo "unknown")
            
    dependencies=$(grep -m 1 'SENTINEL_MODULE_DEPENDENCIES=' "$file" | cut -d'"' -f2 2>/dev/null ||
                  grep -m 1 '^# DEPENDS:' "$file" | cut -d: -f2- | xargs 2>/dev/null || 
                  echo "none")
    
    # Display information
    echo "Version:      $version"
    echo "Author:       $author"
    echo "Description:  $description"
    echo "Dependencies: $dependencies"
    echo -e "Hash Verified: $verified\n"
    
    # Status information
    echo "Status:"
    if grep -qx "$name" "$SENTINEL_ENABLED_FILE"; then
        echo "  ✓ Enabled at startup"
    else
        echo "  ✗ Not enabled at startup"
    fi
    
    if [[ "${SENTINEL_LOADED[$name]:-}" == "1" ]]; then
        echo "  ✓ Currently loaded"
        if [[ -n "${SENTINEL_LOAD_TIMES[$name]:-}" ]]; then
            echo "  ⏱ Load time: ${SENTINEL_LOAD_TIMES[$name]} seconds"
        fi
    else
        echo "  ✗ Not currently loaded"
    fi
    
    if grep -qx "$name" "$SENTINEL_BROKEN_FILE"; then
        echo "  ⚠ Marked as broken"
    fi
    
    # Function analysis
    echo -e "\nExported Functions:"
    # Try to extract function definitions
    local functions
    functions=$(grep -E '^function [a-zA-Z0-9_-]+\(\)|^[a-zA-Z0-9_-]+\(\)' "$file" | 
                sed -E 's/function ([a-zA-Z0-9_-]+)\(\)|\s*\{$|\s*\{|\(\)|\s*$/\1/g')
    
    if [[ -n "$functions" ]]; then
        while IFS= read -r func; do
            [[ -n "$func" ]] && echo "  - $func"
        done <<< "$functions"
    else
        echo "  No functions found or not analyzable"
    fi
}

# === Create Module Template ===
module_create() {
    local name="$1"
    [[ -z "$name" ]] && { error "Module name required"; return 1; }
    
    local file="$SENTINEL_MODULES_PATH/$name.module"
    
    if [[ -f "$file" ]]; then
        error "Module '$name' already exists at $file"
        return 1
    fi
    
    # Create module template
    cat << 'EOF' > "$file"
#!/usr/bin/env bash
# SENTINEL Module - Replace this comment with module name
# HASH: auto-generated-on-save

# === Metadata ===
SENTINEL_MODULE_VERSION="1.0.0"
SENTINEL_MODULE_DESCRIPTION="Description for your module"
SENTINEL_MODULE_AUTHOR="Your Name"
SENTINEL_MODULE_DEPENDENCIES=""

# === Module Code ===
# Your functions and code go below
# Use function_name() format for better compatibility

example_function() {
    echo "This is an example function from the module"
}

# === Initialization Code ===
# Code here will run when the module is loaded
echo "Module $(basename "${BASH_SOURCE[0]}" .module) loaded"
EOF
    
    chmod +x "$file"
    update_hash "$file"
    info "Module template created at $file"
    info "Edit the file to implement functionality, then run: module_enable $name"
}

# === Update Module ===
module_update() {
    local name="$1"
    local file="$SENTINEL_MODULES_PATH/$name.module"
    
    if [[ ! -f "$file" ]]; then
        error "Module '$name' not found"
        return 1
    fi
    
    update_hash "$file"
    module_reset "$name"
    info "Module '$name' updated and reset"
}

# === Auto-load enabled modules ===
auto_load_modules() {
    info "Loading modules from enabled list"
    local start_time
    start_time=$(date +%s.%N)
    
    while read -r name; do
        [[ -z "$name" ]] && continue
        module_enable "$name" "0" "auto"
    done < "$SENTINEL_ENABLED_FILE"
    
    local end_time
    end_time=$(date +%s.%N)
    local total_time
    total_time=$(echo "$end_time - $start_time" | bc)
    
    info "All enabled modules loaded in $total_time seconds"
}

# === Backward compatibility functions ===
bash_module() {
    warn "Using deprecated function bash_module(), please use module_enable instead"
    module_enable "$1"
}

bash_list_modules() {
    warn "Using deprecated function bash_list_modules(), please use module_list instead"
    module_list
}

# === Help/Usage ===
module_help() {
    cat << EOF

SENTINEL $SENTINEL_VERSION Module System
==============================

USAGE:
  module_enable <name> [force] - Load and enable a module
  module_disable <name>        - Disable a module (won't load on startup)
  module_list                  - List all available modules
  module_info <name>           - Show detailed module information
  module_create <name>         - Create a new module from template
  module_update <name>         - Update hash and reset broken status
  module_reset <name>          - Reset broken status for a module
  module_help                  - Show this help information

Configuration directory: $SENTINEL_HOME
Module path: $SENTINEL_MODULES_PATH

EOF
}

# === Entry ===
# If we're being sourced (not executed directly), auto-load modules
if [[ "${BASH_SOURCE[0]}" != "${0}" ]]; then
    # Log startup
    info "SENTINEL $SENTINEL_VERSION initializing"
    auto_load_modules
fi
