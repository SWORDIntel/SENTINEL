# SENTINEL Configuration File
# This file centralizes all user-configurable settings for the SENTINEL environment.
# You can copy this file to `config.yaml` and modify it to your needs.

# --- General Settings ---
general:
  # The root directory of the SENTINEL installation.
  # It is recommended to let the installer set this.
  sentinel_root: ""
  # The directory for your data science projects.
  sentinel_datascience_dir: "$HOME/datascience"

# --- Performance Settings ---
performance:
  # Enable or disable lazy loading for development tools like pyenv, nvm, etc.
  lazy_load: 1
  # Enable or disable parallel loading of modules.
  parallel_loading: 1
  # The maximum number of parallel jobs to use for module loading.
  parallel_max_jobs: 4

# --- Security Settings ---
security:
  # Enable or disable HMAC verification of module integrity.
  module_verify: 1
  # A comma-separated list of allowed commands for the external tools module.
  tools_allowed_commands: "git,docker,kubectl,terraform,ansible,mocktool,infotest"
  # Secure logout settings
  secure_bash_history: 1
  secure_ssh_known_hosts: 0
  secure_clean_cache: 1
  secure_browser_cache: 0
  secure_recent: 1
  secure_vim_undo: 1
  secure_clipboard: 1
  clear_screen_on_logout: 1
  # A comma-separated list of additional directories to secure on logout.
  secure_dirs: ""
  # A temporary workspace to be cleared on logout.
  workspace_temp: ""

# --- Module System Settings ---
modules:
  # Enable or disable debug mode for the module system.
  debug: 0
  # Enable or disable automatic loading of required modules.
  autoload: 1
  # Enable or disable caching of module paths and dependencies.
  cache_enabled: 1
  # A list of core modules that should always be loaded eagerly.
  core_modules:
    - blesh_installer
    - autocomplete
    - logging
    - shell_security
    - config_cache
    - module_manager
    - bash_logout
  # A list of heavy modules that should be lazy loaded.
  lazy_load_modules:
    - sentinel_ml
    - sentinel_ml_enhanced
    - sentinel_osint
    - sentinel_cybersec_ml
    - sentinel_chat
    - sentinel_gitstar
    - sentinel_context
    - sentinel_markov
    - sentinel_smallllm
    - hashcat
    - obfuscate
    - aws_security
    - docker_security
    - vault_integration
    - script_helper

# --- Path Settings ---
paths:
  # The base directory for Python installations.
  python_install_dir: "${PYTHON_INSTALL_DIR:-/opt/python}"
  # The default directory for code projects.
  code_dir: "${CODE_DIR:-/opt/code}"
  # The path to the Homebrew executable.
  homebrew_path: "${HOMEBREW_PATH:-}"
  # The path to the OpenVINO setupvars.sh script.
  openvino_setupvars: "${OPENVINO_SETUPVARS:-/usr/local/setupvars.sh}"
  # The base directory for custom C/C++ toolchains.
  c_toolchain_path: "${C_TOOLCHAIN_PATH:-}"
  # The path to the Waveterm executable.
  waveterm_path: ""
  # ZFS-enforced paths
  zfs_build_dir: "${ZFS_BUILD_DIR:-/opt/build}"
  zfs_ai_dir: "${ZFS_AI_DIR:-/opt/ai}"
  zfs_code_dir: "${ZFS_CODE_DIR:-/opt/code}"
  zfs_config_dir: "${ZFS_CONFIG_DIR:-/opt/config}"
  zfs_docker_dir: "${ZFS_DOCKER_DIR:-/opt/docker}"
  zfs_kernel_dir: "${ZFS_KERNEL_DIR:-/opt/kernel}"

# --- Obfuscation Settings ---
obfuscation:
  # Enable or disable the obfuscation module.
  enabled: 1
  # The output directory for obfuscated files.
  output_dir: "$HOME/secure/obfuscated_files"

# --- Hashcat Settings ---
hashcat:
  # The path to the hashcat binary.
  bin: "/usr/bin/hashcat"
  # The directory containing your wordlists.
  wordlists_dir: "/usr/share/wordlists"
  # The output directory for cracked hashes.
  output_dir: "$HOME/.hashcat/cracked"

# --- Distcc Settings ---
distcc:
  # A space-separated list of distcc hosts.
  hosts: "localhost"
  # The size of the ccache.
  ccache_size: "5G"

# --- Fabric Integration Settings (optional) ---
# Integrates SENTINEL with an outbound-only, non-blocking multi-service ecosystem ("the Fabric").
fabric:
  enabled: false
  identity:
    node_id: ""        # optional tag for telemetry
    device_id: ""      # optional tag for telemetry
    layer_id: ""       # optional tag for telemetry
  docs_root: ""        # path to docs root
  telemetry:
    enabled: false
    transport: "unix"  # unix | http (unix preferred)
    unix_socket: ""    # e.g., /tmp/fabric-events.sock
    http_endpoint: ""  # e.g., http://127.0.0.1:PORT/events
    timeout_ms: 50
    drop_on_fail: true
